$(function () {
    smr_chart = new Highcharts.Chart({
        credits:  {
            enabled: false
        },
        chart: {
            renderTo:'smr_chart',
            plotBackgroundColor: null,
            plotBorderWidth: null,
            plotShadow: false
        },
        title: {
            text: 'Финансы по СМР'
        },
        subtitle: {
            text: '<%= @object.get_object_finance_by_type(1).take.organization_name %> ' +
                    'по договору '+
                    '<%= @object.get_object_finance_by_type(1).take.document_number %>'+
                    '<br>' +
                    'Сумма конракта '+
                    '<%= number_to_currency(@object.get_object_finance_by_type(1).take.work_summ.round,
                                            unit: "₽", separator: ",", delimiter: " ", format: "%n %u", precision: 0) %>'
        },
        tooltip: {
            formatter: function () {
                var s ="";
                sum = 0;
                $.each(this.series.points, function (i, point) {
                    s += "<b>"+point.name + '</b> ' + (point.y/1000000).toFixed(3) + ' млн ₽ <br/>';
                    sum += point.y;
                });
                s += "<b>Стоимость по договору </b>" + (sum/1000000).toFixed(3) + ' млн ₽ <br/>'
                return s;
            },
            shared: true,
            useHTML: true
        },
        plotOptions: {
            pie: {
                center: ['50%', '50%'],
                dataLabels: {
                    enabled: false
                },
                showInLegend: true
            }
        },
        series: [{
            type: 'pie',
            name: 'Сумма',
            innerSize: '50%',
            data: [
                ['Осталось оплатить',  <%= @object.get_object_finance_by_type(1).take.residue_summ %>],
                ['Оплачено за работу', <%= @object.get_object_finance_by_type(1).take.payed_for_work %>],
                ['Выдано авансов', <%= @object.get_object_finance_by_type(1).take.avans_vidano||0.round %>]

            ]
        }]
    });

    other_chart = new Highcharts.Chart({
        credits:  {
            enabled: false
        },
        chart: {
            renderTo:'other_chart',
            plotBackgroundColor: null,
            plotBorderWidth: null,
            plotShadow: false
        },
        title: {
            text: 'Выполнение СМР'
        },
        subtitle: {
            text: '<%= @object.get_object_finance_by_type(1).take.organization_name %> ' +
                    'по договору '+
                    '<%= @object.get_object_finance_by_type(1).take.document_number %>'+
                    '<br>' +
                    'Сумма конракта '+
                    '<%= number_to_currency(@object.get_object_finance_by_type(1).take.work_summ.round,
                                            unit: "₽", separator: ",", delimiter: " ", format: "%n %u", precision: 0) %>'
        },
        tooltip: {
            formatter: function () {
                var s ="";
                sum = 0;
                $.each(this.series.points, function (i, point) {
                    s += "<b>"+point.name + '</b> ' + (point.y/1000000).toFixed(3) + ' млн ₽ <br/>';
                    sum += point.y;
                });
                //s += "<b>Стоимость по договору </b>" + sum + ' рублей <br/>'
                return s;
            },
            shared: true,
            useHTML: true
        },
        plotOptions: {
            pie: {
                center: ['50%', '50%'],
                dataLabels: {
                    enabled: false
                },
                showInLegend: true
            }
        },
        series: [{
            type: 'pie',
            name: 'Сумма',
            innerSize: '50%',
            data: [
                ['Осталось оплатить',  <%= @object.get_object_finance_by_type(1).take.residue_summ %>],
                ['В счет авансов', <%= @object.get_object_finance_by_type(1).take.in_avance_work %>],
                ['Работ выполнено и оплачено', <%= @object.get_object_finance_by_type(1).take.work_with_avance %>]

            ]
        }]
    });

    budjet_chart = new Highcharts.Chart({
        credits:  {
            enabled: false
        },
        chart: {
            renderTo:'budjet_chart',
            plotBackgroundColor: null,
            plotBorderWidth: null,
            plotShadow: false
        },
        title: {
            text: 'Освоение бюджета в <%= Date.current.year %> году'
        },
        tooltip: {
            formatter: function () {
                var s ="";
                sum = 0;
                $.each(this.series.points, function (i, point) {
                    s += "<b>"+point.name + '</b> ' + (point.y/1000000).toFixed(3) + ' млн ₽ <br/>';
                    sum += point.y;
                });
                s += "<b>Лимит по объекту в <%= Date.current.year %>  году </b>" + (sum/1000000).toFixed(3) + ' млн ₽ <br/>'
                return s;
            },
            shared: true,
            useHTML: true
        },
        plotOptions: {
            pie: {
                center: ['50%', '50%'],
                dataLabels: {
                    enabled: false
                },
                showInLegend: true
            }
        },
        series: [{
            type: 'pie',
            name: 'Сумма',
            innerSize: '50%',
            data: [
                //['Лимит по объекту в этом году',  <%= @object.object_finance.sum_titul_current_year %>],
                ['Оплачено в этом году',  <%= @object.object_finance.pay_current_year %>],
                ['Остаток лимита в этом году', <%= @object.object_finance.limit_residue %>]

            ]
        }]
    });
})