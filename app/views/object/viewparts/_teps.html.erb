<div class="form-horizontal teps">
  <div class="form-group">
    <label class="col-sm-5 control-label">Мощность</label>
    <div class="col-sm-7">
      <p class="form-control-static"><%= @object.power==nil ? @object.power.round : "Неизвестно" %> <%= @object.power_measure || "" %></p>
    </div>
  </div>

  <% if @object.appointment =='жилье' %>

  <div class="form-group">
    <label class="col-sm-5 control-label">Площадь квартир</label>
    <div class="col-sm-7">
      <p class="form-control-static"><%= "Неизвестно" %> </p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-5 control-label">Квартирография</label>
    <div class="col-sm-7">
      <p class="form-control-static"><%="1-ком: #{@object.Q1Rooms.round||"-"} кв<br>".html_safe+
                                        "2-ком: #{@object.Q2Rooms.round||"-"} кв<br>".html_safe+
                                        "3-ком: #{@object.Q3Rooms.round||"-"} кв<br>".html_safe+
                                        "4-ком: #{(@object.Q4Rooms||0).round||"-"} кв".html_safe %> </p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-5 control-label">Этажность</label>
    <div class="col-sm-7">
      <p class="form-control-static"><%= @object.floors||'-' %> </p>
    </div>
  </div>
  <% end %>
  <div class="form-group">
    <label class="col-sm-5 control-label">Общая стоимость объекта по АИП</label>
    <div class="col-sm-7">
      <p class="form-control-static">
        <%= number_to_currency(@object.budget, unit: "₽", separator: ",", delimiter: " ", format: "%n %u", precision:0)%></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-5 control-label">Общая стоимость объекта по МГЭ</label>
    <div class="col-sm-7">
      <p class="form-control-static">
        <%= number_to_currency(0, unit: "₽", separator: ",", delimiter: " ", format: "%n %u", precision:0)%></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-5 control-label">Общая стоимость объекта по ПСС</label>
    <div class="col-sm-7">
      <p class="form-control-static">
        <%= number_to_currency(@object.SumPSS||0, unit: "₽", separator: ",", delimiter: " ", format: "%n %u", precision:0)%></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-5 control-label">Срок ввода по контракту</label>
    <div class="col-sm-7">
      <p class="form-control-static"><%= @object.getYearCorrect %> </p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-5 control-label">Срок ввода по плану</label>
    <div class="col-sm-7">
      <p class="form-control-static"><%= @object.year_plan %> </p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-5 control-label">Проектировщик</label>
    <div class="col-sm-7">
      <p class="form-control-static"><%= @object.projector %> </p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-5 control-label">Заказчик-застройщик</label>
    <div class="col-sm-7">
      <p class="form-control-static"><%= @object.techinikal_customer %> </p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-5 control-label">Генподрядчик</label>
    <div class="col-sm-7">
      <p class="form-control-static"><%= @object.general_builder %> </p>
    </div>
  </div>
</div>

