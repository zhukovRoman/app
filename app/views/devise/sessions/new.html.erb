

<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => "form-signin"}) do |f| %>
  <h2 class="form-signin-heading">Авторизуйтесь, пожалуйста</h2>

  <%= f.email_field :email, autofocus: true, required: true, :class => "form-control", :placeholder => "Email"%>
  <%= f.password_field :password, autocomplete: "off", required: true, :class => "form-control", :placeholder => "Пароль" %>


  <% if devise_mapping.rememberable? -%>
    <label class="checkbox">
      <%= f.check_box :remember_me, :style => "margin-left: 0px" %>  Не выходить
    </label>

  <% end -%>

  <div><%= f.submit "Войти", :class=>"btn btn-lg btn-primary btn-block"%></div>
  <%= render "devise/shared/links" %>
<% end %>



